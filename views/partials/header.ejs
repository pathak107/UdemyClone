<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Udemy</title>

    <!-- Main css -->
    <link rel="stylesheet" href="/main.css">
    <!-- Compiled and minified CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="icon" href="/images/udemyLogo.jpg" type="image/jpg" sizes="16x16">

</head>

<body>
    <header>
        <nav>
            <div class="nav-wrapper grey darken-3">
                <a href="#!" class="brand-logo red-text lighten-1">Udemy</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">
                    <li id="home" class="active"><a href="/">Home</a></li>
                    <li id="courses"><a href="/courses">Courses</a></li>
                    <li id="myCourses"><a href="/myCourses">My Course</a></li>

                    <%if(isLogged==true){%>
                        <li id="logout"><a href="/logout">Logout</a></li>
                        <li id="trans"><a href="/transaction">My transactions</a></li>
                    <%}else if(adminLogged==true){%>
                        <li id="adminLogout"><a href="/admin/logout">Logout</a></li>
                        <li id="newCourse"><a href="/admin/newCourse">New Course</a></li>
                        <li id="addCategory"><a href="/admin/addCategory">New Category</a></li>
                    <%}else{%>
                        <li id="login"><a href="/login">Login</a></li>
                        <li id="register"><a href="/register">Sign Up</a></li>
                        <li id="adminLogin"><a href="/admin/login">Admin Login</a></li>
                    <%}%>
                    
                </ul>
            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/courses">Courses</a></li>
            <li><a href="/myCourses">My Course</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Sign Up</a></li>
        </ul>

        <script>
            //code for setting active page
            let route = window.location.href;
            if (route.includes('/courses')) {
                document.getElementById('courses').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/myCourses')) {
                document.getElementById('myCourses').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/login') && !route.includes('/admin/login')) {
                document.getElementById('login').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/register')) {
                document.getElementById('register').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/courseSingle')) {
                document.getElementById('courses').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/admin/login')) {
                document.getElementById('adminLogin').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/admin/newCourse')) {
                document.getElementById('newCourse').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/admin/addCategory')) {
                document.getElementById('addCategory').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/watchCourse')) {
                document.getElementById('myCourses').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
            else if (route.includes('/transaction')) {
                document.getElementById('trans').classList.add('active');
                document.getElementById('home').classList.remove('active');
            }
        </script>

    </header>

    <main>